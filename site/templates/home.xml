<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header>
				<cms:module
					name="articles"
					action="show"
					text_id="header_content"
					template="parts/header_content.xml"
					/>

				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone"
					>
					<cms:text constant="phone"/>
					<img src="_BASEURL.'/site/images/phone-circle.svg'" cms:eval="src"/> 
				</a>

			</header>

			<section class="form">

				<cms:module
					name="articles"
					action="show"
					text_id="form_title"
					template="parts/header_content.xml"
					/>

				<cms:module
					name="contact_form"
					action="show"
					text_id="contact"
					/>	

			</section>

			<section class="about">
				<cms:desktop>
					<div>
						<cms:module
							name="articles"
							action="show"
							text_id="about_feature1"
							template="parts/article.xml"
							/>
					</div>

					<div></div>
					<div></div>

					<div>
						<cms:module
							name="articles"
							action="show"
							text_id="about_feature2"
							template="parts/article.xml"
							/>					
					</div>
				</cms:desktop>
				<cms:mobile>
					<div>
						<cms:module
							name="articles"
							action="show"
							text_id="about_feature1"
							template="parts/article.xml"
							/>
					</div>

					<div></div>

					<div>
						<cms:module
							name="articles"
							action="show"
							text_id="about_feature2"
							template="parts/article.xml"
							/>					
					</div>

					<div></div>
				</cms:mobile>

			</section>

			<section class="features">

				<cms:module
					name="articles"
					action="show_group"
					text_id="features"
					template="parts/show_group_articles.xml"
				/>

			</section>

			<footer>
				<div class="footer_content">
					<cms:module
						name="articles"
						action="show"
						text_id="footer_content"
						template="parts/header_content.xml"
						/>
				</div>

				<div class="copyright">
					<span><cms:text constant="copyright"/></span>
				</div>
								
			</footer>
		</body>
	</html>
</document>
